{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "outDir": "tmp-tests",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "lib": ["ES2020", "DOM"],
    "typeRoots": ["./types"],
    "paths": {
      "@/*": ["examples/with-nextjs/*"]
    }
  },
  "include": [
    "examples/with-nextjs/app/components/shared/normalizeCapture.ts",
    "examples/with-nextjs/app/components/shared/normalizeCapture.test.ts",
    "examples/with-nextjs/lib/normalizeFilename.ts",
    "examples/with-nextjs/lib/normalizeFilename.test.ts"
  ]
}
